<%= tabs do |tabs|
		#alphere use all disciplines in discipline table in DB.
		for discipline_name in @discipline_names
			if discipline_name.to_s == ''
				tabs.add('All', :discipline => nil)
			else
				#remove underscores and captalize each word
				tabs.add(discipline_name.gsub('_', " ").gsub(/\b\w/) {|s| s.upcase }, :discipline => discipline_name) 
			end
		end  

