<table class="base">
  <tr>
    <th>Single Day Events (Child Events)</th>
    <th> </th>
  </tr>
  <%- for single_day_event in @event.events -%>
  <tr>
    <td class='nowrap' style="width: 160px;"><%= link_to single_day_event.date.strftime('%A, %B %d'), :action => 'show', :id => single_day_event.to_param %></td>
    <td class='link'><%= link_to single_day_event.stage_name, :action => 'show', :id => single_day_event.to_param %></td>
  </tr>
  <%- end -%>
  <% if @event.events.empty? %>
    <tr><td colspan='2'>None</td></tr>
  <% end %>
</table>
