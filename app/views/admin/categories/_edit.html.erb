<span id="category_name_<%= @category.id %>">
  <div class="inline">
  <%= form_remote_tag(:url => {:action => 'update', :id => @category.to_param}, :update => "category_name_#{@category.id}") %>
    <%= text_field_tag 'name', @category.name, :size => 30, :class => 'edit_in_place_text_field' %>
  </div>
  <div class="inline">
      <%= link_to_remote image_tag('/images/buttons/small_cancel.gif', :height => 20, :width => 22, :border => 0, :align => 'absbottom'), 
        :update => "category_name_#{@category.id}", 
        :url => { :action => "cancel", :id => @category.to_param }%>
      </div>
    <%= error_message_on 'category', 'name' %>
  </form>
</span>
