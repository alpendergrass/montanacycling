<%= form_remote_tag(:url => {:action => 'update_name', :id => @team.to_param}) %>
  <%= text_field_tag 'name', @team.name, :size => 30, 
        :class => 'edit_in_place_text_field', 
        :style => "margin-left: 24px;",
        :id => "team_#{@team.id}_name_text_field" %><%= link_to_remote image_tag('/images/buttons/small_cancel.gif', :class => "cancel"), 
      { :update => "team_#{@team.id}_name", 
        :url => { :action => "cancel", :id => @team.to_param} },
      { :class => "cancel" } %></form>
<script type="text/javascript" charset="utf-8">
  $('team_<%= @team.id %>_name_text_field').select();
</script>
