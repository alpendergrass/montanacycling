<% @page_title = "Articles" %>

<%= tabnav :article_categories %>
<br/>
<table>
  <% for article in @articles %>
    <tr>
      <td><h3><%= link_to "#{article.title}", { :action => 'show', :id => article } %></h3>
        <p><%#= strip_tags(truncate(article.body, 300)) %></p>
        <p><%= truncate(article.body, 500) %></p>
        <%- if article.body.length > 500 %>
          <p><%= link_to "more", { :action => 'show', :id => article } %></p>
        <%- end %></td>
    </tr>
  <% end %>
</table>
