<% @page_title = "Teams" %>

<%= tabnav :results_disciplines %>
<br/><br/>
<table class="base" id="teams">
  <caption>Teams</caption>
  <tr>
    <th>Name</th>
    <th>MBRA Member?</th>
    <th>Website</th>
    <th>Contact</th>
    <th></th>
  </tr>
  <%= render :partial => "team", :collection => @teams.sort { |x, y| x.name.downcase <=> y.name.downcase || x <=> y } %>
  
  <% if @teams.empty? %>
  <tr>
    <td colspan="5">No member teams visible</td>
  </tr>
  <% end -%>
</table>
